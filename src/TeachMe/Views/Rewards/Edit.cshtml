@model TeachMe.Models.Reward

@{
    ViewData["Title"] = "Edit";
}

<br /><br />
<div id="Headline">
    <h2>@ViewBag.Title</h2>
</div>
<br />
<form asp-action="Edit">
    <div class="form-horizontal">
   
        
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="RewardID" />
        <div class="form-group">
            <label asp-for="Title" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NumOfJubot" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NumOfJubot" class="form-control" />
                <span asp-validation-for="NumOfJubot" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Picture" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Picture" class="form-control" />
                <span asp-validation-for="Picture" class="text-danger" />
            </div>
        </div>
       
        <div class="form-group">
            <label asp-for="Video" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Video" class="form-control" />
                <span asp-validation-for="Video" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<br /><br />
@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
