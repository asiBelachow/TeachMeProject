@model IEnumerable<TeachMe.Models.Student>
@{ 
    Layout = null;
}
@using TeachMe.ViewModels;
@using System.Security.Claims

<br />

<table class="table">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.degree)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Jubot)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JubotPerHour)
        </th>
        <th>
            Rewards
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.degree)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Jubot)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JubotPerHour)
            </td>
            <td>
                @if (User.IsSignedIn())
                {
                    @if (User.GetUserName().Equals("admin@gmail.com"))
                    {
                        <div>
                            <a asp-controller="Students" asp-action="Edit" asp-route-id="@item.StudentID">Edit</a> |
                            <a asp-controller="Students" asp-action="Details" asp-route-id="@item.StudentID">Details</a> |
                            <a asp-controller="Students" asp-action="Delete" asp-route-id="@item.StudentID">Delete</a>  |
                           
                        </div>
                    }
                }
                <a href="/Home/showRewards/@item.StudentID">Rewards</a>
                <a asp-controller="Students" asp-action="CourseList" asp-route-id="@item.StudentID">Courses</a>  |
               @* <a asp-action="CourseList" asp-route-id="@item.StudentID">List Of Courses</a> |
    @*<a asp-action="showRewards" asp-route-id="@item.StudentID">Rewards</a>*@
            </td>
        </tr>
    }

</table>
