@model IEnumerable<TeachMe.Models.Review>

@{
    ViewData["Title"] = "Index";
}

<br /><br />
<div id="Headline">
    <h2>@ViewBag.Title</h2>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Revieww)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.rate)
        </th>
        <th></th>
    </tr>
    
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Revieww)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.rate)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.ReviewID">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.ReviewID">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.ReviewID">Delete</a>
        </td>
    </tr>
}
</table>
